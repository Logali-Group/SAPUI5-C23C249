<mvc:View controllerName="employees.controller.App"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>

                        <HBox>
                                <Label id="labelCountry"
                                        text="{i18n>labelEmployee}"
                                        class="sapUiSmallMargin"/>
                                <Input id="slCountry"
                                        class="sapUiSmallMarginEnd"
                                        maxLength="6"
                                        liveChange="onValidate"
                                        value="{jsonCountries>/EmployeeId}"
                                        width="200px"/>
                                <Select id="countries"
                                        items="{jsonCountries>/Countries}"
                                        forceSelection="false"
                                        selectedKey="{jsonCountries>/CountryKey}"
                                        class="sapUiSmallMarginEnd">
                                    <items>
                                        <core:Item key="{jsonCountries>Key}" 
                                                    text="{jsonCountries>Text}"/>
                                    </items>
                                </Select>
                                <Button id="btnFilter"
                                        text="{i18n>btnFilter}"
                                       tooltip="{i18n>btnFilter}"
                                        icon="sap-icon://search"
                                        press="onFilter"
                                        class="sapUiSmallMarginEnd"/>
                                <Button id="btnClearFilter"
                                        text="{i18n>btnClearFilter}"
                                         tooltip="{i18n>btnClearFilter}"
                                        icon="sap-icon://clear-filter"
                                        press="onClearFilter"
                                        class="sapUiSmallMarginEnd"/>
                        </HBox>

                        <HBox>
                            <Panel>
                                <content>
                                    <Button id="btnShowCity"
                                            text="{i18n>showCity}"
                                            visible="{jsonConfig>/visibleBtnShowCity}"
                                            press="onShowCity"/>
                                    <Button id="btnHideCity"
                                            text="{i18n>hideCity}"
                                            visible="{jsonConfig>/visibleBtnHideCity}"
                                            press="onHideCity"/>
                                    <Table id="tableEmployee"
                                            items="{
                                                path: 'northwind>/Employees',
                                                parameters:{
                                                    expand:'Orders'
                                                }
                                            }">
                                        <columns>
                                            <Column visible="{jsonConfig>/visibleID}">
                                                <header>
                                                    <Label text="{i18n>tableId}"/>
                                                </header>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleName}">
                                                <Label text="{i18n>name}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleCountry}">
                                                <Label text="{i18n>country}"/>
                                            </Column>
                                            <Column visible="{jsonConfig>/visibleCity}">
                                                <Label text="{i18n>city}"/>
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem type="Active" press="onShowOrders">
                                                <cells>
                                                    <Text text="{northwind>EmployeeID}"/>
                                                    <Text text="{northwind>FirstName} {northwind>LastName}"/>
                                                    <Text text="{northwind>Country}"/>
                                                    <Text text="{northwind>City}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                    <HBox id="ordersTable"/>
                                </content>
                            </Panel>
                        </HBox>

                    </content>
                </Page>
            </pages>
        </App>
    </Shell>



</mvc:View>
