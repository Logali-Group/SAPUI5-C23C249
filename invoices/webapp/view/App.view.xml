
<mvc:View   controllerName="logaligroup.com.invoices.controller.App"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page"
                        title="{i18n>appTitle}">

                        <headerContent>
                            <Button id="helloDialogHeader"
                                icon="sap-icon://action"
                                press="onOpenDialogHeader"
                                class="sapUiSmallMarginEnd"/>
                        </headerContent>

                        <content>

                            <mvc:XMLView id="viewHelloPanel"
                                        viewName="logaligroup.com.invoices.view.HelloPanel"
                                        type="XML"/>

                        </content>

                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>