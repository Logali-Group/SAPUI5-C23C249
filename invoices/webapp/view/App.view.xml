
<mvc:View   controllerName="logaligroup.com.invoices.controller.App"
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc">

    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page"
                        title="Invoices">

                        <content>

                            <Panel headerText="{i18n>helloPanel}">

                                <content>

                                    <Button 
                                            text="{i18n>showHelloButtonText}"
                                            press="onShowHello"
                                            icon="sap-icon://information"
                                            type="Emphasized"/>

                                    <Input class="sapUiSmallMarginBegin"
                                        description="{i18n>hello} {view>/recipient/name}"
                                        value="{view>/recipient/name}"
                                        valueLiveUpdate="true"
                                        width="60%"/>

                                    <Text text="{i18n>hello} {view>/recipient/name}"
                                            class="sapUiSmallMargin bodlElements"/>

                                </content>

                            </Panel>

                        </content>

                </Page>
            </pages>
        </App>
    </Shell>

</mvc:View>