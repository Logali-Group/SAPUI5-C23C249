<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">

    <Dialog id="helloDialog"
        title="{i18n>hello} {view>/recipient/name}">

        <content>
            <core:Icon src="sap-icon://hello-world"
                    size="8rem"/>
        </content>

        <beginButton>
            <Button text="{i18n>dialogCloseBut}"
                    press="onCloseDialog"
                    type="Reject"/>
        </beginButton>

    </Dialog>

</core:FragmentDefinition>